{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hydryl",
  "version": "0.1.0",
  "identifier": "com.EVERMEDIAPROJECT.Hydryl",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Hydryl",
				"label": "main",
				"width": 460,
				"height": 1000,
				"fullscreen": true,
				"x": 0,
				"y": 0,
				"transparent": false,
				"decorations": true,
				"shadow": true,
				"visible": true
      }
    ],
    "security": {
      "csp": "asset: http://asset.localhost"
    }
  },
  "bundle": {
		"active": true,
		"android": {
			"minSdkVersion": 26
		},
		"targets": "all",
		"publisher": "EVERMEDIA PROJECT",
		"icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
		"copyright": "Â© EVERMEDIA PROJECT",
		"category": "Weather",
		"fileAssociations":
		[
			{
				"ext": [ "mp3", "wav", "weba", "webm", "m4a", "ogg", "oga", "caf", "flac", "opus", "mid", "aiff", "wma", "au" ]
			}
		] 
  }
}
